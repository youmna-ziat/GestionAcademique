<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ma.tp.gestionacademique.controller.EleveController">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- FORMULAIRE -->
    <GridPane hgap="10" vgap="10">
        <Label text="Matricule"/>
        <TextField fx:id="matriculeField" GridPane.columnIndex="1"/>

        <Label text="Nom" GridPane.rowIndex="1"/>
        <TextField fx:id="nomField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Prénom" GridPane.rowIndex="2"/>
        <TextField fx:id="prenomField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Email" GridPane.rowIndex="3"/>
        <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Statut" GridPane.rowIndex="4"/>
        <ComboBox fx:id="statutBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Filière" GridPane.rowIndex="5"/>
        <ComboBox fx:id="filiereBox" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- BOUTONS -->
    <HBox spacing="10">
        <Button text="Ajouter" onAction="#handleAdd"/>
        <Button text="Modifier" onAction="#handleUpdate"/>
        <Button text="Supprimer" onAction="#handleDelete"/>
        <Button text="Actualiser" onAction="#loadEleves"/>
        <Button text="Dossier Administratif" onAction="#openDossier"/>
        <Button text="← Retour au Dashboard" onAction="#goBack"/>
    </HBox>

    <!-- TABLE -->
    <TableView fx:id="eleveTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID"/>
            <TableColumn fx:id="colMatricule" text="Matricule"/>
            <TableColumn fx:id="colNom" text="Nom"/>
            <TableColumn fx:id="colPrenom" text="Prénom"/>
            <TableColumn fx:id="colEmail" text="Email"/>
            <TableColumn fx:id="colStatut" text="Statut"/>
            <TableColumn fx:id="colFiliere" text="Filière"/>
        </columns>
    </TableView>

</VBox>

